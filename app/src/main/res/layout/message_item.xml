<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ie.miao.yichong.diycardview.view.DIYRoundedCardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#016BFD"
        android:elevation="5dp"
        android:minWidth="100dp"
        app:DIYRightBottomCorner="false"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_medium"
            android:padding="12dp"
            android:text="Hello worldHello worldHello worldHello worldHello worldHello worldHello worldHello world"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </ie.miao.yichong.diycardview.view.DIYRoundedCardView>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/read_status"
        app:layout_constraintTop_toBottomOf="@id/card" />

    <ImageView
        android:id="@+id/read_status"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/unread"
        android:text="aaa"
        app:layout_constraintEnd_toEndOf="@id/card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card" />
</androidx.constraintlayout.widget.ConstraintLayout>